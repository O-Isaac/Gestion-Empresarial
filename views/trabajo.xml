<odoo>
    <data>
        <!-- Lista -->
        <record model="ir.ui.view" id="trabajos_list_view">
            <field name="name">Trabajos</field>
            <field name="model">empresa.trabajo</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="responsable"/>
                    <field name="estado"/>
                    <field name="prioridad"/>
                </list>
            </field>
        </record>


        <!-- Formulario -->
        <record model="ir.ui.view" id="trabajos_form_view">
            <field name="name">Trabajos</field>
            <field name="model">empresa.trabajo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Detalles del Trabajo">
                                <group>
                                    <field name="nombre"/>
                                    <field name="descripcion"/>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_fin"/>
                                    <field name="prioridad"/>
                                    <field name="estado"/>

                                    <field widget="many2one_tags" name="responsable"/>
                                </group>
                            </page>
                            <page string="Detalles del Proyecto">
                                <group>
                                    <field widget="many2one_tags" options="{'no_create': True}" name="proyecto_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Accion -->
        <record model="ir.actions.act_window" id="empresa_trabajo_action">
            <field name="name">Trabajos</field>
            <field name="res_model">empresa.trabajo</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>