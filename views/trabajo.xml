<odoo>
    <data>
        <!-- Lista -->
        <record model="ir.ui.view" id="trabajos_list_view">
            <field name="name">Trabajos</field>
            <field name="model">empresa.trabajo</field>
            <field name="arch" type="xml">
                <list string="Lista de Trabajos">
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="progreso_total" widget="progressbar" title="Progreso"/>
                    <field name="fecha_inicio" widget="date"/>
                    <field name="fecha_fin" widget="date"/>
                    <field name="responsable" widget="many2one_avatar_user"/>
                    <field name="estado" widget="badge" decoration-success="estado=='finalizado'" decoration-warning="estado=='en_progreso'" decoration-info="estado=='en_revision'" decoration-danger="estado=='pendiente'"/>
                    <field name="prioridad" widget="badge" decoration-danger="prioridad=='urgente'" decoration-warning="prioridad=='alta'"/>
                </list>
            </field>
        </record>

        <!-- Formulario -->
        <record model="ir.ui.view" id="trabajos_form_view">
            <field name="name">Trabajo</field>
            <field name="model">empresa.trabajo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <!-- FILA 1: HEADER CON T√çTULO -->
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <h1>
                                <field name="nombre" class="oe_inline" placeholder="Nombre del Trabajo"/>
                            </h1>
                        </div>

                        <!-- FILA 2: DESCRIPCI√ìN + PROGRESO + RESPONSABLE (3 columnas iguales) -->
                        <group col="1">
                            <div class="row" style="width: 100%;">
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label for="descripcion" style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">üìù Descripci√≥n</label>
                                    <field name="descripcion" widget="text_html" placeholder="Descripci√≥n del trabajo..." nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                </div>
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label for="progreso" style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">üìä Progreso</label>
                                    <field name="progreso_total" widget="gauge" options="{'max_value': 100}" nolabel="1" string=""/>
                                </div>
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label for="responsable" style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">üë§ Responsable</label>
                                    <field name="responsable" widget="many2one" nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                </div>
                            </div>
                        </group>

                        <!-- FILA 3: ESTADO, FECHAS Y PRIORIDAD (3 columnas iguales) -->
                        <group col="1">
                            <div class="row" style="width: 100%;">
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label for="estado" style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">üéØ Estado</label>
                                    <field name="estado" widget="selection" nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                </div>
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">üìÖ Fecha Inicio</label>
                                    <field name="fecha_inicio" widget="date" nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                    <label style="font-weight: bold; display: block; margin-top: 10px; margin-bottom: 10px; padding: 5px 0; color: #333;">üèÅ Fecha Fin</label>
                                    <field name="fecha_fin" widget="date" nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                </div>
                                <div class="col-lg-4" style="display: inline-block; width: 33.33%; padding: 10px; box-sizing: border-box;">
                                    <label for="prioridad" style="font-weight: bold; display: block; margin-bottom: 10px; padding: 5px 0; color: #333;">‚ö° Prioridad</label>
                                    <field name="prioridad" widget="selection" nolabel="1" style="background-color: #f9f9f9; border: 1px solid #ddd; padding: 8px;"/>
                                </div>
                            </div>
                        </group>

                        <!-- NOTEBOOK: ACTIVIDADES -->
                        <notebook>
                            <page string="üéØ Actividades Asociadas">
                                <field name="actividades_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Accion -->
        <record model="ir.actions.act_window" id="empresa_trabajo_action">
            <field name="name">Trabajos</field>
            <field name="res_model">empresa.trabajo</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Vista Tree de Actividades para el Trabajo -->
        <record model="ir.ui.view" id="actividades_tree_view">
            <field name="name">Actividades Tree</field>
            <field name="model">empresa.actividad</field>
            <field name="arch" type="xml">
                <tree create="true" edit="bottom" delete="true">
                    <field name="nombre"/>
                    <field name="detalle"/>
                    <field name="persona" widget="many2one_avatar_user"/>
                    <field name="inicio_planificado" widget="date"/>
                    <field name="final_planificado" widget="date"/>
                    <field name="estado" widget="badge" decoration-success="estado=='finalizado'" decoration-warning="estado=='en_curso'" decoration-info="estado=='en_revision'" decoration-danger="estado=='pendiente'"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>