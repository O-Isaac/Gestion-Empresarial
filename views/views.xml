<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="empresa.list">
      <field name="name">Gestion Empresarial</field>
      <field name="model">empresa.proyecto</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="description"/>
          <field name="fecha_inicio"/>
          <field name="fecha_fin"/>
          <field name="responsable"/>
          <field name="estado"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="empresa.action_window">
      <field name="name">Gestion de Proyectos</field>
      <field name="res_model">empresa.proyecto</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- server action to the one above -->
