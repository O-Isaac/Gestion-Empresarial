        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="Gestion de Empresa" id="empresa.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Gestion" id="empresa.menu_1" parent="empresa.menu_root"/>
    <!-- actions -->
    <menuitem name="Proyectos" id="empresa.menu_1_list" parent="empresa.menu_1"
              action="empresa.action_window"/>

  </data>
</odoo>
