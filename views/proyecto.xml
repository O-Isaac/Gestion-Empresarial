<odoo>
    <data>
        <!-- Lista -->
        <record model="ir.ui.view" id="proyectos_list_view">
            <field name="name">Gestion Empresarial</field>
            <field name="model">empresa.proyecto</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="responsable"/>
                    <field name="estado"/>
                </list>
            </field>
        </record>

        <!-- Formulario -->
        <record model="ir.ui.view" id="proyectos_form_view">
            <field name="name">Gestion Empresarial</field>
            <field name="model">empresa.proyecto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Detalles del Proyecto">
                                <group>
                                    <field name="nombre"/>
                                    <field name="descripcion"/>
                                    <field name="fecha_inicio"/>
                                    <field name="fecha_fin"/>
                                    <field name="responsable"/>
                                    <field name="estado"/>
                                </group>
                            </page>
                            <page string="Tareas del proyecto">
                                <group>
                                    <field name="trabajos_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Acciones al abrir un modelo -->
        <record model="ir.actions.act_window" id="empresa_proyecto_action">
            <field name="name">Proyectos</field>
            <field name="res_model">empresa.proyecto</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
